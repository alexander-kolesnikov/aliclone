

<div class="container-fluid">
  <div class="well well-sm">
    <strong>Category Title</strong>
      <div class="btn-group">
        <a href="#" id="list" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-th-list"> </span> List </a> 
        <a href="#" id="grid" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-th"> </span> Grid </a>
      </div>
  </div>
 
  <div id="products" class="row list-group">
    <div class="col-xs-4 col-lg-10">
      - if @products.any? 
        - @products.each  do |product|
            <div class="item col-xs-6 col-lg-4">
              <div class="thumbnail">
                = image_tag(product.pictures.first.file.url, class: "group list-group-image img-responsive")
                <div class="caption">
                  <h4 class="group inner list-group-item-heading">
                    <p> #{truncate(product.title, length: 23)} </p> </h4>
                  <p class="group inner list-group-item-text">
                    <p> #{truncate(product.description, length: 50)} </p> </p>
                  <div class="row">
                    <div class="col-xs-12 col-md-6">
                    = link_to 'View Product', product_path(product.id)
                    </div>
                  </div>
                </div>
              </div>
            </div>
      - else
        p No items found
    </div>
  </div>
</div>



