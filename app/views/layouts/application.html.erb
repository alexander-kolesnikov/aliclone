<!DOCTYPE html>
<html>
<head>
  <title>Babaexpress</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body >



  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
      </div>
        <a class="navbar-brand" href=<%=root_path%> >
        BabaExpress </a>
      <div class="collapse navbar-collapse">
        <div class="nav navbar-form navbar-right">
          <%- if current_user %>
            <%= link_to("Sign Out", destroy_user_session_path, method: 'delete', class: "btn btn-default") %>
          <%- else %>
            <%= link_to("Sign In", new_user_session_path, method: 'get', class: "btn btn-default") %>
          <% end %>
        </div>
          <%= form_tag(products_path, method: :get, class: "navbar-form navbar-right") do %>
            <%= text_field_tag(:query, params[:query], placeholder: 'Search query', class: "form-control") %>
            <%= submit_tag("Find", class: "btn btn-default") %>
          <% end %> 
      </div>
    </div>
  </nav>

  <%- if notice %> 
    <div class="notice alert alert-info">
      <%= notice %>
    </div>
  <% end %>

  <%- if alert %> 
    <div class="alert alert alert-danger"> 
      <%= alert %>
    </div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
